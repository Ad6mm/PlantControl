<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".AddPlantActivity">

    <ImageView
        android:id="@+id/deletePlantImageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete"
        app:tint="#F44336" />

    <TextView
    android:id="@+id/addPlantTextViewDetails"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:shadowColor="#000000"
    android:text="Plant Details"
    android:textAlignment="center"
    android:textAllCaps="false"
    android:textColor="#009600"
    android:textIsSelectable="true"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/divider2Details"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<Button
    android:id="@+id/editPlantViewDetails"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp"
    android:backgroundTint="#006400"
    android:text="Edit"
    android:textAlignment="center"
    android:textAllCaps="false"
    android:textSize="14sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/divider2Details"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<View
    android:id="@+id/divider2Details"
    android:layout_width="409dp"
    android:layout_height="1dp"
    android:layout_marginTop="4dp"
    android:background="?android:attr/listDivider"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/addPlantTextViewDetails" />

<Button
    android:id="@+id/returnButtonDetails"
    android:layout_width="280dp"
    android:layout_height="60dp"
    android:layout_marginBottom="4dp"
    android:backgroundTint="#006400"
    android:text="Return"
    app:cornerRadius="25dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageViewDetails"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/default_plant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2Details" />

<EditText
    android:id="@+id/plantNameDetails"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="Plant name"
    android:textAlignment="center"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/divider4Details"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/imageViewDetails"
    app:layout_constraintTop_toBottomOf="@+id/divider2Details" />

    <View
        android:id="@+id/divider4Details"
        android:layout_width="409dp"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDetails" />

<View
    android:id="@+id/divider5Details"
    android:layout_width="409dp"
    android:layout_height="2dp"
    android:layout_marginTop="80dp"
    android:background="?android:attr/listDivider"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/divider4Details" />

<Switch
    android:id="@+id/isIndoorSwitchDetails"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:checked="true"
    android:showText="false"
    android:text="Is plant indoor?"
    android:textAlignment="center"
    android:textSize="18sp"
    android:textStyle="bold"
    android:thumbTint="#006400"
    android:trackTint="#006400"
    app:layout_constraintBottom_toTopOf="@+id/divider5Details"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/divider4Details"
    tools:checked="true" />

<EditText
    android:id="@+id/wateringIntervalValueDetails"
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="24dp"
    android:ems="10"
    android:inputType="number"
    android:text="7"
    android:textAlignment="center"
    android:textColor="#2196F3"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/divider5Details"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/divider4Details" />

<TextView
    android:id="@+id/textView3Details"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:text="Watering interval"
    android:textAlignment="center"
    android:textColor="#000000"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/divider5Details"
    app:layout_constraintEnd_toStartOf="@+id/wateringIntervalValueDetails"
    app:layout_constraintTop_toBottomOf="@+id/divider4Details" />

<View
    android:id="@+id/divider6Details"
    android:layout_width="409dp"
    android:layout_height="2dp"
    android:layout_marginTop="80dp"
    android:background="?android:attr/listDivider"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/divider5Details" />

<TextView
    android:id="@+id/plantDateDetails"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginBottom="16dp"
    android:ems="10"
    android:inputType="date"
    android:text="Click to select"
    android:textAlignment="center"
    app:layout_constraintBottom_toTopOf="@+id/divider6Details"
    app:layout_constraintStart_toStartOf="parent" />

<TextView
    android:id="@+id/lastWateringDateDetails"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="16dp"
    android:ems="10"
    android:inputType="date"
    android:text="Click to select"
    android:textAlignment="center"
    app:layout_constraintBottom_toTopOf="@+id/divider6Details"
    app:layout_constraintEnd_toEndOf="parent" />

<TextView
    android:id="@+id/textView4Details"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginTop="12dp"
    android:text="Plant date"
    android:textAlignment="center"
    android:textColor="#000000"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/divider5Details" />

<TextView
    android:id="@+id/textView5Details"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="24dp"
    android:text="Last watering date"
    android:textAlignment="center"
    android:textColor="#000000"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/divider5Details" />

<TextView
    android:id="@+id/textView6Details"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:text="Descrpition"
    android:textAlignment="center"
    android:textColor="#000000"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/divider6Details" />

<EditText
    android:id="@+id/descriptionTextDetails"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:ems="10"
    android:gravity="start|top"
    android:inputType="textMultiLine"
    app:layout_constraintBottom_toTopOf="@+id/returnButtonDetails"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView6Details" />

<ImageView
    android:id="@+id/homeDetails"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_marginStart="4dp"
    app:layout_constraintBottom_toTopOf="@+id/divider5Details"
    app:layout_constraintStart_toEndOf="@+id/isIndoorSwitchDetails"
    app:layout_constraintTop_toBottomOf="@+id/divider4Details"
    app:srcCompat="@drawable/outline_home_24" />

<ImageView
    android:id="@+id/sunDetails"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_marginStart="4dp"
    app:layout_constraintBottom_toTopOf="@+id/divider5Details"
    app:layout_constraintStart_toEndOf="@+id/isIndoorSwitchDetails"
    app:layout_constraintTop_toBottomOf="@+id/divider4Details"
    app:srcCompat="@drawable/outline_wb_sunny_24"
    app:tint="#FFC107" />

<DatePicker
    android:id="@+id/datePickerPlantDetails"
    android:layout_width="350dp"
    android:layout_height="435dp"
    android:layout_marginTop="120dp"
    android:background="#FFFFFF"
    android:datePickerMode="calendar"
    android:visibility="invisible"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<DatePicker
    android:id="@+id/datePickerWateringDetails"
    android:layout_width="350dp"
    android:layout_height="435dp"
    android:layout_marginTop="120dp"
    android:background="#FFFFFF"
    android:datePickerMode="calendar"
    android:visibility="invisible"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.491"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBarDetails"
        style="?android:attr/progressBarStyle"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:indeterminateTint="#006400"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewDetails"
        app:layout_constraintEnd_toEndOf="@+id/imageViewDetails"
        app:layout_constraintStart_toStartOf="@+id/imageViewDetails"
        app:layout_constraintTop_toTopOf="@+id/imageViewDetails" />

</androidx.constraintlayout.widget.ConstraintLayout>